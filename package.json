{
  "name": "@nullify/libp2p-bundle",
  "version": "0.0.1",
  "description": "Basic libp2p bundle with settings that match js-ipfs",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "files": [
    "types/**/*",
    "src/**/*"
  ],
  "scripts": {
    "types": "tsc",
    "prepublishOnly": "npm run types",
    "lint": "eslint --fix",
    "test": "mocha --exit \"./test/**/*.spec.js\"",
    "coverage": "nyc npm run test"
  },
  "keywords": [
    "ipfs",
    "libp2p",
    "p2p",
    "util"
  ],
  "author": "Carson Farmer <carson.farmer@gmail.com>",
  "license": "MIT",
  "browser": {
    "./src/runtime/config-nodejs.js": "./src/runtime/config-browser.js",
    "./src/runtime/libp2p-nodejs.js": "./src/runtime/libp2p-browser.js",
    "./src/runtime/libp2p-pubsub-routers-nodejs.js": "./src/runtime/libp2p-pubsub-routers-browser.js",
    "./src/runtime/repo-nodejs.js": "./src/runtime/repo-browser.js"
  },
  "devDependencies": {
    "@types/interface-datastore": "^1.0.1",
    "chai": "^4.2.0",
    "delay": "^4.4.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "datastore-level": "^2.0.0",
    "dlv": "^1.1.3",
    "err-code": "^2.0.3",
    "ipns": "^0.8.1",
    "libp2p": "^0.30.1",
    "libp2p-bootstrap": "^0.12.1",
    "libp2p-floodsub": "^0.24.1",
    "libp2p-gossipsub": "^0.8.0",
    "libp2p-kad-dht": "^0.20.4",
    "libp2p-mdns": "^0.15.0",
    "libp2p-mplex": "^0.10.1",
    "libp2p-noise": "^2.0.1",
    "libp2p-tcp": "^0.15.2",
    "libp2p-webrtc-star": "^0.20.6",
    "libp2p-websockets": "^0.15.0",
    "merge-options": "^3.0.4",
    "uint8arrays": "^2.0.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**",
      "**/*.[j|t]s.map"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-constant-condition": "off"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test",
      "src/ipns"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}