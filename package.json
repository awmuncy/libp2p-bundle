{
  "name": "@nullify/libp2p-bundle",
  "version": "0.2.0",
  "description": "Basic libp2p bundle with settings that match js-ipfs",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "files": [
    "types/**/*",
    "src/**/*"
  ],
  "scripts": {
    "types": "tsc",
    "prepublishOnly": "npm run types",
    "lint": "eslint --fix",
    "test": "mocha --exit \"./test/**/*.spec.js\"",
    "coverage": "c8 --reporter=lcov --reporter=text npm run test",
    "docs": "jsdoc2md -c jsdoc.conf.json --no-gfm --template docs/README.hbs --files src/index.js > README.md"
  },
  "keywords": [
    "ipfs",
    "libp2p",
    "p2p",
    "util"
  ],
  "author": "Carson Farmer <carson.farmer@gmail.com>",
  "license": "MIT",
  "browser": {
    "./src/runtime/config-nodejs.js": "./src/runtime/config-browser.js",
    "./src/runtime/libp2p-nodejs.js": "./src/runtime/libp2p-browser.js",
    "./src/runtime/libp2p-pubsub-routers-nodejs.js": "./src/runtime/libp2p-pubsub-routers-browser.js",
    "./src/runtime/repo-nodejs.js": "./src/runtime/repo-browser.js"
  },
  "devDependencies": {
    "@types/interface-datastore": "^1.0.1",
    "c8": "^7.4.0",
    "chai": "^4.2.0",
    "delay": "^4.4.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jsdoc": "^3.6.6",
    "jsdoc-to-markdown": "^7.0.0",
    "jsdoc-tsimport-plugin": "^1.0.4",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "datastore-level": "^5.0.1",
    "dlv": "^1.1.3",
    "err-code": "^3.0.1",
    "ipns": "^0.11.0",
    "libp2p": "^0.31.2",
    "libp2p-bootstrap": "^0.12.3",
    "libp2p-floodsub": "^0.25.0",
    "libp2p-gossipsub": "^0.9.0",
    "libp2p-kad-dht": "^0.22.0",
    "libp2p-mdns": "^0.16.0",
    "libp2p-mplex": "^0.10.1",
    "libp2p-noise": "^3.0.0",
    "libp2p-tcp": "^0.15.4",
    "libp2p-webrtc-star": "^0.22.2",
    "libp2p-websockets": "^0.15.6",
    "merge-options": "^3.0.4",
    "uint8arrays": "^2.1.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jsdoc/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "jsdoc",
      "prettier"
    ],
    "ignorePatterns": [
      "types/**",
      "**/*.[j|t]s.map"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-constant-condition": "off",
      "valid-jsdoc": "off"
    },
    "settings": {
      "jsdoc": {
        "mode": "typescript"
      }
    }
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test",
      "src/ipns"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
